
{% extends "demo9.base.html.twig" %}

{% block title %}Proposition index{% endblock %}

{% block body %}
    {% block mainheader %}
    {{ parent() }}  
    {% endblock %}

      {% block content %}

		<div class="main-panel">
			<div class="container container-full">
				<div class="page-navs bg-white">
					<div class="nav-scroller">
                     <br>
					<!-- Customized Card -->
					<div class="page-navs bg-white py-3 pr-2">
							<div class="card-title fw-bold" > Propositions : ({{ cours.getTotalItemCount }}) elements</div>
					 </div>
					 <hr Style="width: 100%; height: 4px; background: #f3f3f3;" />
								<div class="d-flex justify-content-between ">
									<div class="d-md-inline-block ">
										<form>
											<div class="input-group">
												<div class="input-group-prepend">
													<button type="submit" class="btn btn-icon btn-black btn-search">
														<i class="fa fa-search search-icon"></i>
													</button>
												</div>
												<input type="text" class="form-control" aria-label="Text input with dropdown button" name="q" value="{{ app.request.query.get('q') }}">
												<div class="input-group-append">
													<button class="btn btn-primary btn-border  dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filter</button>
													<div class="dropdown-menu">
														<a class="dropdown-item" href="#">Date</a>
														<a class="dropdown-item" href="#">Nom</a>
														<div role="separator" class="dropdown-divider"></div>
														<a class="dropdown-item" href="#">tag </a>
													</div>
												</div>
											</div>
										</form>
									</div>
									<button type="button" class="btn btn-black" data-toggle="modal" data-target="#addRowModal" >
										<i class="fa fa-plus"></i>
										Ajouter Cours
									</button>
						</div>
                      <hr Style="width: 100%; height: 4px; background: #f3f3f3;" />

             <div>






					</div>
				</div>


               
				<div class="page-inner">
					<div class="row row-projects">
                     {% for cour in cours %}
						<div class="col-sm-4 col-lg-3">
                        
							<div class="card">

								<div class="p-2">
                                  <p class="text-muted small mb-2">Ajouté le :{{ cour.dateCreation ? cour.dateCreation|date('Y-m-d') : '' }}</p>

                                    <a  href="{{ path('cours_show', {'id': cour.id}) }}">
                                        <img class="card-img-top rounded" src="{{ cour.image }}"  title="{{ cour.nomCours }}" alt="{{ cour.nomCours }}">
                                    </a>
                                </div>
								<div class="card-body pt-2">
                                   <h4 class=" card-title mb-1 fw-bold " Style="height:120px">
                                        <a card-text href="{{ path('cours_show', {'id': cour.id}) }}" title="{{ cour.nomCours }}">
                                            {{ cour.nomCours }}
                                        </a>
                                    </h4>
                                    
									<div class="avatar-group">
										<div class="avatar avatar-sm">
											<img src="http://luma.humatheme.com/assets/images/256_luke-porter-261779-unsplash.jpg" alt="..." class="avatar-img rounded-circle border border-white">
										</div>
										<div class="avatar avatar-sm">
											<img src="http://luma.humatheme.com/assets/images/256_michael-dam-258165-unsplash.jpg" alt="..." class="avatar-img rounded-circle border border-white">
										</div>
										
                                        
									</div>

								</div>

                                <div class="card-footer">
									<div class="row user-stats text-center">
										<div class="col">
											<div class="number"> <a href="{{ path('cours_show', {'id': cour.id}) }}">Detailles</a></div>
											<div class="title"></div>
										</div>
										<div class="col">
											<div class="number"><a href="{{ path('cours_edit', {'id': cour.id}) }}">Inscrire</a></div>
											<div class="title"></div>
										</div>
										<div class="col">
											<div class="number"><a href="{{ path('cours_edit', {'id': cour.id}) }}">Modifier</a></div>
											<div class="title"></div>
										</div>
                                        <div class="col">
											<div class="number"><a href="{{ path('cours_edit', {'id': cour.id}) }}">Suprimer</a></div>
											<div class="title"></div>
										</div>
									</div>
								</div>

                                <div class="view-profile">
                                                <a href="#" class="btn btn-secondary btn-block">abonnez-vous</a>
                                </div>
							</div>
						</div>
                {% else %}
						<div class="col-sm-6 col-lg-3">
							<div class="card">
								
								<div class="card-body pt-2">
									<p class="text-muted small mb-2">no records found</p>
									
								</div>
							</div>
						</div>
                {% endfor %}
                      
					</div>

                     <ul class="pagination justify-content-center mb-5 mb-sm-0">	
								<p class="text-muted"> Affiche 1 à 10 de {{ cours.getTotalItemCount }} entrées  </p>							
									<li class="page-item">
										{{ knp_pagination_render(cours, null, {}, {
											'position': 'right',
											'size': 'small',
											'rounded': true,
										}) }}
									</li>								
								</ul>
				</div>
			</div>
			<footer class="footer">
				<div class="container-fluid">
					<nav class="pull-left">
						<ul class="nav">
							<li class="nav-item">
								<a class="nav-link" href="http://www.themekita.com">
									ThemeKita
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">
									Help
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">
									Licenses
								</a>
							</li>
						</ul>
					</nav>
					<div class="copyright ml-auto">
						2018, made with <i class="fa fa-heart heart text-danger"></i> by <a href="http://www.themekita.com">ThemeKita</a>
					</div>				
				</div>
			</footer>
		</div>







































    {% block javascripts %}
            {{ parent() }}
    {% endblock %}


   



           
           
  {% endblock %}

    


{% endblock %}






















 