{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Nom_cours</th>
                <td>{{ cour.nomCours }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cour.description }}</td>
            </tr>
            <tr>
                <th>Objectif</th>
                <td>{{ cour.objectif }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ cour.tag }}</td>
            </tr>
            <tr>
                <th>Compétences_req</th>
                <td>{{ cour.compétencesReq }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ cour.niveau }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ cour.image }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ cour.dateCreation ? cour.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Dernier_modification</th>
                <td>{{ cour.dernierModification ? cour.dernierModification|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cours_index') }}">back to list</a>

    <a href="{{ path('cours_edit', {'id': cour.id}) }}">edit</a>

    {{ include('cours/_delete_form.html.twig') }}
