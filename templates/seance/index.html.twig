{% extends 'base.html.twig' %}

{% block title %}Seance index{% endblock %}

{% block body %}
    <h1>Seance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Durée</th>
                <th>Temps</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.id }}</td>
                <td>{{ seance.titre }}</td>
                <td>{{ seance.description }}</td>
                <td>{{ seance.durée }}</td>
                <td>{{ seance.temps ? seance.temps|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('seance_show', {'id': seance.id}) }}">show</a>
                    <a href="{{ path('seance_edit', {'id': seance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('seance_new') }}">Create new</a>
{% endblock %}
