{% extends 'base.html.twig' %}

{% block title %}Realisation index{% endblock %}

{% block body %}
    <h1>Realisation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Desicription</th>
                <th>Date_creation</th>
                <th>Date_modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realisation in realisations %}
            <tr>
                <td>{{ realisation.id }}</td>
                <td>{{ realisation.titre }}</td>
                <td>{{ realisation.desicription }}</td>
                <td>{{ realisation.dateCreation ? realisation.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ realisation.dateModification ? realisation.dateModification|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('realisation_show', {'id': realisation.id}) }}">show</a>
                    <a href="{{ path('realisation_edit', {'id': realisation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('realisation_new') }}">Create new</a>
{% endblock %}
